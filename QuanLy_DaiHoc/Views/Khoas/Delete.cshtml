@model QuanLy_DaiHoc.Models.Khoa

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Delete</h1>


<div>
    <h4>Khoa</h4>
    <hr />

    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">

            <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                    Are you sure you want to delete this?
                    <hr />

                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead">
                                <b>

                                    @Html.DisplayFor(model => model.TenKhoa)
                                </b>
                            </h2>
                            <p class="text-muted text-sm">
                                <b>Khoa ID: </b>

                                @Html.DisplayFor(model => model.KhoaId)

                            </p>
                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                <li class="small">
                                    <span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Ngày Thành lập:  <b>

                                        @Html.DisplayFor(model => model.NgayThanhLap)
                                    </b>
                                </li>
                                <li class="small">
                                    <span class="fa-li"><i class="fa-sharp fa-solid fa-circle-info"></i></span> Mô tả:  <b>

                                        @Html.DisplayFor(model => model.Mota)
                                    </b>
                                </li>
                            </ul>
                        </div>
                        <div class="col-5 text-center">
                            <img src="../../dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <a href="#" class="btn btn-sm btn-primary">
                                <i class="fas fa-trash"> <input type="submit" value="Delete" class="btn btn-default " /></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-primary">
                                <i class="fas fa-user"></i>  @Html.ActionLink("Back to List", "Index")
                            </a>
                        }
                    </div>
                </div>
            </div>

            @* @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
            </div>
            }*@
        </div>
    </div>
</div>