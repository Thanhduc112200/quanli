@model IEnumerable<QuanLy_DaiHoc.Models.Khoa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";






}

<link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<h2>Bảng Khoa</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="khoa" class="table table-bordered table-striped display ">
            <thead>
                <tr>
                    <th>Khoa ID</th>
                    <th>@Html.DisplayNameFor(model => model.TenKhoa)</th>
                    <th>@Html.DisplayNameFor(model => model.NgayThanhLap)</th>
                    <th>Mô Tả</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.KhoaId)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenKhoa)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayThanhLap)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.KhoaId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.KhoaId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.KhoaId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

<a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">
    Dropdown <span class="caret"></span>
</a>
<div class="dropdown-menu">
    <a class="dropdown-item" tabindex="-1" href="@Url.Action("Index", "tblCustomers1", new {filter = "Hold Customers"})">Hold Customers</a>
    <a class="dropdown-item" tabindex="-1" href="@Url.Action("Index", "tblCustomers1", new {filter = "Perspective"})">Perspective</a>
    <a class="dropdown-item" tabindex="-1" href="@Url.Action("Index", "tblCustomers1", new {filter = "Balance"})">Balance</a>
</div>

<!-- DataTables  & Plugins -->
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/jszip/jszip.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/pdfmake/vfs_fonts.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/Template/AdminLTE-3.2.0/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>





<script>
    $(function () {
        $("#khoa").DataTable({
            "responsive": true, "lengthChange": true, "autoWidth": true,
            "paging": true,
            "autoFill": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
            "rowReorder": true,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
        }).buttons().container().appendTo('#khoa_wrapper .col-md-6:eq(0)');

    });
    $(document).ready(function () {
        $('#example').DataTable();
    });</script>


