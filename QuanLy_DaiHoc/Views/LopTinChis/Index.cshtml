    $(function () { 
        $("#LopTinChi").DataTable({
            "responsive": true, "lengthChange": true, "autoWidth": true,
            "paging": true,
            "autoFill": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
            "rowReorder": true,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
        }).buttons().container().appendTo('#nguoiDung_wrapper .col-md-6:eq(0)');
         
