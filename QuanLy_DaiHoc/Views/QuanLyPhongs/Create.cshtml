@model QuanLy_DaiHoc.Models.QuanLyPhong

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-md-center">

        <div class="col-md-4">
            <div class="card card-primary">
                <div class="card-header">
                    
                    <h2 style="text-align:center">THÊM PHÒNG</h2>
                </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-7">
                        <div class="form-group">

                            <label for="inputTenKhoa">Tên phòng:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenP, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            <label for="inputNgayThanhLap">Số điện thoại:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            <label for="inputMota">Địa chỉ email:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Dcm, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Dcm, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Save">
                        @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
            </div>

        </div>
    </div>
}
