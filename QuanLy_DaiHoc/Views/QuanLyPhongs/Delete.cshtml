@model QuanLy_DaiHoc.Models.QuanLyPhong

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Xóa thông tin phòng</h3>
            </div>

            <div class="card-body">
                <div class="form-group">
                    <label>Mã phòng</label>
                    <input type="text" class="form-control float-right" value="@Model.Idphong" />
                </div>

                <div class="form-group">
                    <label>Tên phòng</label>
                    <input type="text" class="form-control float-right" value="@Model.TenP" />
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" class="form-control float-right" value="@Model.Sdt" />
                </div>

                <div class="form-group">
                    <label>Địa chỉ email</label>
                    <input type="text" class="form-control float-right" value="@Model.Dcm" />
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>
