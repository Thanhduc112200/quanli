@model QuanLy_DaiHoc.Models.TblBan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Bạn có muốn xóa ???</h3>
        </div>
        <div class="card-body">
            <label for="TenBan">Tên Ban</label>
            <input class="form-control form-control-lg" type="text" name = "TenBan" id="TenBan" value="@Model.TenBan">

            <label for="TruongBan">Trưởng Ban</label>
            <input class="form-control form-control-lg" type="text" name="TruongBan" id="TruongBan" value="@Model.TruongBan">

            <label for="NgayThanhLap">Ngày thành lập</label>
            <input class="form-control form-control-lg" type="text" name="NgayThanhLap" id="NgayThanhLap" value="@Model.NgayThanhLap">

            <label for="Sdt">Số điện thoại</label>
            <input class="form-control form-control-lg" type="text" name="Sdt" id="Sdt" value="@Model.Sdt">

            <label for="Email">Email</label>
            <input class="form-control form-control-lg" type="text" name="Email" id="Email" value="@Model.Email">

        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaBan" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
        <!-- /.card-body -->
    </div>    
